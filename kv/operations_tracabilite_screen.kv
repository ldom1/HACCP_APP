#:import ManageTracabiliteScreen pyScripts.operations_tracabilite.ManageTracabiliteScreen

<TracabiliteScreen>:
    GridLayout:
        cols: 2
        pos_hint: {"top": 1, "left": 1}
        size_hint: 1, .8
        padding: 20, 20
        GridLayout:
            cols: 1
            GridLayout:
                cols: 2
                pos_hint: {"top": 1, "left": 1}
                size_hint: 1, 0.2
                GridLayout:
                    cols: 1
                    pos_hint: {"top": 1, "left": 1}
                    size_hint: 0.2, 0.2
                    Image:
                        source: "icons/numbers/nb_1.png"
                GridLayout:
                    cols: 1
                    Label:
                        pos_hint: {"top": 1, "left": 0.3}
                        color: utils.get_color_from_hex("#000000")
                        size_hint: 0.1, 0.1
                        text: "Photo de l'élément"
            ScrollView:
                pos_hint: {"top": .8, "left": 1}
                size_hint: 1, .7
                GridLayout:
                    cols: 1
                    GridLayout:
                        cols: 1
                        pos_hint: {"top": 1, "left": 1}
                        size_hint: 1, .3
                        ImageButton:
                            source: "icons/camera.png"
                            on_release:
                                app.change_screen("camera_screen", direction="left")
                    GridLayout:
                        cols: 1
                        pos_hint: {"top": .7, "left": 1}
                        size_hint: 1, .7
                        canvas.before:
                            Color:
                                rgb: utils.get_color_from_hex("#ffffff")
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        Image:
                            id: img_tracabilite_to_display
                            source: ""
                            allow_stretch: True
                            size_hint: 1,1
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        GridLayout:
            cols: 1
            GridLayout:
                cols: 2
                pos_hint: {"top": 1, "left": 1}
                size_hint: 1, 0.2
                GridLayout:
                    cols: 1
                    pos_hint: {"top": 1, "left": 1}
                    size_hint: 0.2, 0.2
                    Image:
                        source: "icons/numbers/nb_2.png"
                GridLayout:
                    cols: 1
                    Label:
                        pos_hint: {"top": 1, "left": 0.3}
                        color: utils.get_color_from_hex("#000000")
                        size_hint: 0.1, 0.1
                        text: "Sélection du collaborateur"
            ScrollView:
                pos_hint: {"top": .8, "left": 1}
                size_hint: 1, .7
                GridLayout:
                    # Banner grid
                    id: tracabilite_selection_collaborateur_grid
                    cols: 1
                    spacing: 20,20
                    padding: 10, 10
                    size_hint_y: None
                    height: self.minimum_height
                    width: self.minimum_width
                    row_default_height: '85dp'
                    row_force_default: True
    GridLayout:
        size_hint: 1, .1
        pos_hint: {"top": .2, "left": 0.8}
        cols: 2
        spacing: 10, 10
        padding: 20, 5
        LabelButton:
            id: btn_temp_fridge_cancel
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#C04A4A") if self.state == 'normal' else utils.get_color_from_hex("#C00000")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: "[u]Annuler[/u]"
            markup: True
            on_release:
                app.change_screen("home_screen", direction="right")
        LabelButton:
            id: btn_temp_fridge_valider
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#3CAE70") if self.state == 'normal' else utils.get_color_from_hex("#00B050")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: "[u]Valider[/u]"
            markup: True
            on_release:
                ManageTracabiliteScreen().get_data()

    GridLayout:
        cols: 1
        size_hint: 1, .1
        pos_hint: {"top": .1, "left": 1}
        GridLayout:
            cols: 1
            Label:
                text: ""
                id: warning
                color: utils.get_color_from_hex("#C00000")

